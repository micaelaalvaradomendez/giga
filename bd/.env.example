# Variables de entorno para PostgreSQL - GIGA
# Copiar este archivo a .env y modificar según sea necesario

# Configuración de la base de datos
DB_NAME=giga
DB_USER=giga_user
DB_PASSWORD=giga2025
DB_HOST=localhost
DB_PORT=5432

# Configuración de PostgreSQL
POSTGRES_DB=giga
POSTGRES_USER=giga_user
POSTGRES_PASSWORD=giga2025
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# Configuración del contenedor
PGDATA=/var/lib/postgresql/data/pgdata

# Configuración regional
LANG=es_AR.UTF-8
LC_ALL=es_AR.UTF-8
LC_COLLATE=es_AR.UTF-8
LC_CTYPE=es_AR.UTF-8
TZ=America/Argentina/Buenos_Aires

# URL de conexión completa
DATABASE_URL=postgresql://giga_user:giga2025@localhost:5432/giga